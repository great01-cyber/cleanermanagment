rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all documents for authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Email logs can be created by authenticated users
    match /email_logs/{emailId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null;
    }
    
    // Issue reports can be created by authenticated users
    match /issue_reports/{reportId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null;
    }
    
    // Email configuration can be read/written by authenticated users
    match /email_config/{configId} {
      allow read, write: if request.auth != null;
    }
  }
}
